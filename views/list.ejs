<%- include('header') -%>

<div class="box" id="heading">
  <h1><%= listTitle %> </h1>
</div>
<div class="box">
  <% newListItems.forEach(element => {%>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkbox" value="<%=element._id%>" onChange="this.form.submit()">
      <p><%= element.name %></p>
    </div>
    <input type="hidden" name="listName" value="<%=listTitle%>"></input>
  </form>
  <%}); %>


  <form class="item" action="/" method="post">
    <!-- name attr is like name of a variable -->
    <input type="text" name="newItem" placeholder="Type new item" autocomplete="off">
    <button type="submit" name="list" value=<%=listTitle%>>+</button>
  </form>
</div>

<%- include('footer') -%>